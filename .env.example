# Windows Log Gathering Agent - Environment Variables

# API Configuration
LGA_API_HOST=0.0.0.0
LGA_API_PORT=8000
LGA_DEBUG=false
LGA_LOG_LEVEL=INFO

# Configuration
LGA_CONFIG_FILE=config/machines.yaml
LGA_LOG_TAIL_LINES=1000

# Database (if implemented)
DATABASE_URL=postgresql://user:password@localhost:5432/loggatheringagent

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
LLM_ENDPOINT=http://localhost:11434/v1
LLM_MODEL=llama3.1:8b
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# Authentication (if implemented)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Domain Credentials (Use secure methods in production)
DOMAIN_USERNAME=DOMAIN\\admin
DOMAIN_PASSWORD=your_secure_password
DOMAIN_NAME=COMPANY.LOCAL

# MCP Server Configuration
POWERSHELL_MCP_HOST=localhost
POWERSHELL_MCP_PORT=8001
SMB_MCP_HOST=localhost
SMB_MCP_PORT=8002

# Frontend Configuration
VITE_API_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000

# Development
NODE_ENV=development

# Production
COMPOSE_PROJECT_NAME=log-agent

# Email/Notifications (if implemented)
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=notifications@company.com
SMTP_PASSWORD=smtp_password
NOTIFICATION_EMAILS=admin@company.com,ops@company.com

# Slack Integration (if implemented)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SLACK_CHANNEL=#alerts